{
    "name": "zicht/messages-bundle",
    "description": "Zicht Messages bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "doctrine/orm": "^2.5",
        "sonata-project/admin-bundle": "^4",
        "symfony/console": "^4.4",
        "symfony/finder": "^4.4",
        "symfony/yaml": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "suggest": {
        "google/cloud-translate": "To use the TranslateCommand with batch-translations through the Google Translate API"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Zicht\\Bundle\\MessagesBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zicht\\Bundle\\MessagesBundle\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit -c phpunit.xml.dist"
        ]
    }
}
